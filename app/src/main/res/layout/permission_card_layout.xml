<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="50dp"
                android:text="@string/Info_CORE"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewCORE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="50dp"
                android:text="@string/Disabled"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="50dp"
                android:text="@string/Info_GPS"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewGPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="50dp"
                android:text="@string/Disabled"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="50dp"
                android:text="@string/Info_DND"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewDND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="50dp"
                android:text="@string/Disabled"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="50dp"
                android:text="@string/Info_DEVICE_ADMIN"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewDeviceAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="50dp"
                android:text="@string/Disabled"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="50dp"
                android:text="@string/Info_Overlay"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="50dp"
                android:text="@string/Disabled"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="50dp"
                android:text="@string/Info_SecureSettings"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewWriteSecureSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="50dp"
                android:text="@string/Disabled"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="50dp"
                android:text="@string/Info_Notification"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="50dp"
                android:text="@string/Disabled"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="50dp"
                android:text="@string/Info_Camera"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textViewCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="50dp"
                android:text="@string/Disabled"
                android:textSize="21sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>